function steamrollArray(arr) {
  let newArr = [];
  newArr.push(flat(arr));

  function flat(elem){
    if(Array.isArray(elem)){
      return elem.forEach(item => flat(item));
    } else {
      return elem;
    }
  }

  console.log(newArr);
  return newArr;
}

steamrollArray([[["a"]], [["b"]]]);
steamrollArray([1, [2], [3, [[4]]]]);
steamrollArray([1, [], [3, [[4]]]]);
steamrollArray([1, {}, [3, [[4]]]]);
